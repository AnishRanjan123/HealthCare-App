# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'healthcare' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    # Force-disable the new architecture (Fabric/TurboModules) because some
    # third-party pods (e.g. react-native-sound) are not compatible yet.
    :new_arch_enabled => false
  )

  target 'healthcareTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Align all pods to a modern deployment target to silence 9.0 warnings.
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end
    end

    # Fix duplicate definitions in RNSoundSpecJSI.h generated by codegen
    rnsound_header = File.join(installer.sandbox.root, '..', 'ios', 'build', 'generated', 'ios', 'RNSoundSpecJSI.h')
    if File.exist?(rnsound_header)
      content = File.read(rnsound_header)
      # Count occurrences of RNSoundBaseSoundOptionTypes - should only appear once
      if content.scan(/struct.*RNSoundBaseSoundOptionTypes/).length > 2
        # Remove the duplicate block between NativeSoundAndroidCxxSpec and NativeSoundIOSCxxSpecJSI
        # Pattern: Remove everything between "};" (end of Android spec) and "class JSI_EXPORT NativeSoundIOSCxxSpecJSI"
        # but keep the closing brace and newline
        fixed_content = content.gsub(
          /(\s+Delegate delegate_;\s+\};\s+\n\n)\s+\n#pragma mark - RNSoundBaseSoundOptionTypes.*?struct RNSoundSoundOptionTypesBridging.*?\};\s+\n\n(class JSI_EXPORT NativeSoundIOSCxxSpecJSI : public TurboModule)/m,
          '\1\2'
        )
        if fixed_content != content
          File.write(rnsound_header, fixed_content)
          puts "Fixed duplicate definitions in RNSoundSpecJSI.h".green
        end
      end
    end
  end
end
